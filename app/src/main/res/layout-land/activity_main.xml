<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d1food"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="58dp"
        android:text="text"
        android:textColor="#ffffff"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/textbuyid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textbuyid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="27dp"
        android:text="Buy Dog Food"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_buy"
        app:layout_constraintEnd_toEndOf="@+id/btn_buy"
        app:layout_constraintTop_toBottomOf="@+id/current_time" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="401dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="117dp"
        android:background="@drawable/btn_bg"
        android:text="Buy Food"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbuyid" />


</androidx.constraintlayout.widget.ConstraintLayout>